<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp"
    android:backgroundTint="@color/cardBackgroundColor">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:weightSum="1"
        android:background="@drawable/card_background">

        <ImageView
            android:id="@+id/petImage"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center_vertical"
            android:contentDescription="Pet Image"
            android:scaleType="centerCrop"
            android:layout_marginEnd="16dp"
            android:elevation="4dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="start">

            <TextView
                android:id="@+id/petName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fluffy"
                android:textSize="18sp"
                android:textColor="@color/secondaryColor"
                android:textStyle="bold"
                android:layout_marginBottom="6dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:singleLine="true" />

            <TextView
                android:id="@+id/petContent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Fluffy is a playful and friendly dog looking for a home! He loves playing with toys and is great with kids."
                android:textSize="14sp"
                android:textColor="@color/secondaryColor"
                android:lineSpacingExtra="4dp"
                android:maxLines="3"
                android:ellipsize="end"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/petPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone: 123-456-7890"
                android:textSize="14sp"
                android:textColor="@color/secondaryColor"
                android:layout_marginTop="8dp" />

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
